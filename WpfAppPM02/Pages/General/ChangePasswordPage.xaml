<Page x:Class="WpfAppPM02.Pages.General.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPM02.Pages.General"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePasswordPage">

    <Grid>
        <StackPanel Margin="50">
            <TextBlock Text="Введите старый пароль" FontSize="18" />
            <PasswordBox x:Name="OldPassBox" Margin="0,10" />

            <TextBlock Text="Введите новый пароль" FontSize="18" />
            <PasswordBox x:Name="PassBox" Margin="0,10" />

            <TextBlock Text="Повторите введенный пароль" FontSize="18" />
            <PasswordBox x:Name="PassBox1" Margin="0,10" />
            <Button Click="BtnChangePassClick" Content="Сменить пароль" Margin="200,10" />

        </StackPanel>
        
    </Grid>
</Page>
