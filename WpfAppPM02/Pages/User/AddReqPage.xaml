<Page x:Class="WpfAppPM02.Pages.User.AddReqPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPM02.Pages.User"
      mc:Ignorable="d" 
      FontSize="18"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddReqPage">

    <Grid>
        <StackPanel Margin="50">
            <TextBlock FontSize="18" Text="Тема заголовка" />
            <TextBox SpellCheck.IsEnabled="True" Language="ru-ru" x:Name="TextBoxTheme"  />
            <TextBlock Text="Опишите свою проблему" FontSize="18" />
         
            <TextBox AcceptsReturn="True" x:Name="TextBoxDesc" SpellCheck.IsEnabled="True" Language="ru-ru" />
            <TextBlock />
            <Button Click="Button_Click" Height="30" Width="150" Content="Отправить" />

        </StackPanel>
        
    </Grid>
</Page>
