<Page x:Class="WpfAppPM02.Pages.Admin.AddRolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPM02.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontSize="18"
      Title="AddRolPage">
        

    <Grid>
        <StackPanel Height="auto"  Margin="40" VerticalAlignment="Center">
            <TextBlock FontSize="18" Text="Наименование роли" HorizontalAlignment="Center" />
            <TextBox FontSize="18" Name="NameTextBox" />
            <TextBlock FontSize="18" Text="Модификатор доступа" HorizontalAlignment="Center" />
            <ComboBox FontSize="18" x:Name="AccessComboBox"/>
            <TextBlock />
            <Button FontSize="18" Click="AddClick" Content="Добавить" />
            <TextBlock />
            <Button FontSize="18" Click="BackClick" Content="Назад" />
            
        </StackPanel>
        
    </Grid>
</Page>
