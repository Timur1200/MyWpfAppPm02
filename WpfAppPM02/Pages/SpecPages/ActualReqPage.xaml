<Page x:Class="WpfAppPM02.Pages.SpecPages.ActualReqPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPM02.Pages.SpecPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActualReqPage" Loaded="Page_Loaded">

    <Grid>
        <DataGrid  FontSize="20" Name="DGridReq" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DGridReq_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID запроса" Binding="{Binding IdQuire}" ></DataGridTextColumn>
                <DataGridTextColumn Header="Дата отправки" Binding="{Binding Date1D}" ></DataGridTextColumn>
                <DataGridTextColumn Header="Тема" Binding="{Binding Theme}" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Page>
