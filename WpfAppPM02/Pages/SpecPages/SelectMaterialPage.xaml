<Page x:Class="WpfAppPM02.Pages.SpecPages.SelectMaterialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPM02.Pages.SpecPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontSize="16"
      Title="SelectMaterialPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.20*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>

            <TextBlock  Text="Введите количество:" />


            <TextBlock />
            <TextBox x:Name="TBoxAmount" />
            <TextBlock />
            <Button Click="Button_Click" Content="Выбрать" Margin="5" FontSize="18" />
            <TextBlock />
            <Button Click="BackClick" Content="Назад" Margin="5" FontSize="18" />
        </StackPanel>

        <Frame Grid.Column="1" x:Name="FrameInWindow" />
    </Grid>
</Page>
